<% if current_user.try(:admin?) || current_user.id == @advertisement.user_id %>
    <% provide(:title, "| Update Advertisement Info") %>
        <div class="page-header">
          <h1>Edit <small>Your advertisement</small></h1>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading"><h4>Edit your advertisement info</h4></div>
            <div class="panel-body">
                <%= render 'edit_form', advertisement: @advertisement %>
            </div>
            <div class="panel-footer">
                <%= link_to 'Show', @advertisement,  class: "btn btn-info" %> 
                <%= link_to 'Back', :back, class: "btn btn-default" %>
            </div>
        </div>
<% else %>
  <% controller.redirect_to root_path, notice: 'Need to be administrator for this.' %> 
<% end %>