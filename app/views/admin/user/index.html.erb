  <% provide(:title, "| See the Users") %>
  
  <div class="page-header">
    <h1>Users <small>See the registered users</small></h1>
  </div>
  
  <%= render 'shared/show_flash' %>
  
  <div class="panel panel-default">
    <div class="panel-heading"><h4>Management</h4></div>
    <div class="panel-body scroll-x">
    
    <table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Ads</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr class='col-md-9'><%= render 'search_form' %></tr>
      <% @users.each do |user| %>
          <tr>
            <td class='col-md-3 max-length wrap-word'><h5><%= user.email %></h5></td>
            <td class='col-md-7'><h5><%= user.advertisements.count %></h5></td>
            <td><%= link_to 'Show', admin_user_path(user), class: "btn btn-info pull-right" %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
      
      <div class="text-center">
        <%= will_paginate(@users) %>
      </div>
      
    </div>
    <div class="panel-footer">
      <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
  </div>