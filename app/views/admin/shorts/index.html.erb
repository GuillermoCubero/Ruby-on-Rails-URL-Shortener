  <% provide(:title, "| See the Shorts") %>
  
  <div class="page-header">
    <h1>Shorts <small>See the shortened URL here</small></h1>
  </div>
  
  <%= render 'shared/show_flash' %>
  
  <div class="panel panel-default">
    <div class="panel-heading"><h4>Management</h4></div>
    <div class="panel-body">
    
    <table class="table table-striped">
      <tbody>
        <tr class='col-md-9'><%= render 'search_form' %></tr>
        <% @shorts.each do |short| %>
        <tr>
            <td class='col-md-5'><h5><strong>Original: </strong><%= link_url(short.url) %></h5></td>
            <td class='col-md-5'><h5><strong>Shorted: </strong><%= link_url(request.base_url+'/'+short.short_url) %></h5></td>
            <td><%= link_to 'Show', admin_short_path(short), class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', admin_short_path(short), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
      
      <div class="text-center">
        <%= will_paginate %>
      </div>
    
    </div>
    <div class="panel-footer">
        <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
  </div>
  
  