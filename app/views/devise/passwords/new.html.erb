<% provide(:title, "| Forgot Password") %>

<div class="page-header center">
  <h1>Forgot password <small>Reset it here</small></h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :email %>
    <div class="input-group">
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"youremail@youremail.com" %>
      <span class="input-group-btn"><%= f.submit "Send me reset password instructions", class: "btn btn-default" %></span>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>