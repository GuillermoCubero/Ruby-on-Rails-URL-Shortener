<% if current_user.try(:admin?) %>
  <% provide(:title, "| See the Users") %>
  
  <%= render 'shared/show_flash' %>
  
  <div class="page-header">
    <h1>Users <small>See the registered users</small></h1>
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading"><h4>Manage registered users</h4></div>
    <div class="panel-body">
    
      <table class="table table-striped">
        <tbody>
          <tr class='col-md-9'><%= render 'search_form' %></tr>
          <% @users.each do |user| %>
          <tr>
            <td class='col-md-3'><h5><strong>Admin:</strong> <%= user.admin %></h5></td>
            <td class='col-md-7'><h5><strong>Email:</strong> <%= user.email %></h5></td>
            <td><%= link_to 'Show', user, class: "btn btn-info pull-right" %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
      <div class="text-center">
        <%= will_paginate(@users) %>
      </div>
      
    </div>
    <div class="panel-footer">
      <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
  </div>
  
<% else %>
  <% controller.redirect_to root_path, notice: 'Need to be administrator for this.' %> 
<% end %>