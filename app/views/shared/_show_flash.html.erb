<% if !flash.empty? %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1 center">
      <% if flash.notice() %>
      <div class="alert alert-success" role="alert">
        <p id="notice"><%= flash[:notice] %></p>
      </div>
      <% elsif flash.alert() %>
      <div class="alert alert-danger" role="alert">
        <p id="notice"><%= flash[:alert] %> </p>
      </div>
      <% end %>
    </div>
  </div>
<% end %>